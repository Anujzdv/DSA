#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    int numSub(string s) {
        long long cur = 0, ans = 0;
        for(char c : s){
            if(c == '1'){
                cur++;
                ans += cur;
            }else{
                cur = 0;
            }
        }
        return ans % 1000000007;
    }
};

int main() {
    string s;
    cin >> s;

    Solution obj;
    cout << obj.numSub(s);

    return 0;
}
